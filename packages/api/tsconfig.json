{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "importHelpers": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["."],
  "exclude": [
    "**/dist/**",
    "**/node_modules/**"
  ]
}
